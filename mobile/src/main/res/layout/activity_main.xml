<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxgfr.traxivityd4j.MainActivity">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonLoadD4J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonLoadD4J" />

        <TextView
            android:id="@+id/textViewLoadD4J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewLoadD4J"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/buttonLoadKeras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonLoadKeras" />

        <TextView
            android:id="@+id/textViewLoadKeras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewLoadKeras"
            android:gravity="center_horizontal"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:layout_width="fill_parent">
            <Button
                android:id="@+id/buttonLoadDownstairs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonLoadDownstairs" />
            <Button
                android:id="@+id/buttonLoadJogging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonLoadJogging" />
            <Button
                android:id="@+id/buttonLoadSitting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buttonLoadSitting" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:layout_width="fill_parent">
        <Button
            android:id="@+id/buttonLoadStanding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonLoadStanding" />
        <Button
            android:id="@+id/buttonLoadUpstairs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonLoadUpstairs" />
        <Button
            android:id="@+id/buttonLoadWalking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonLoadWalking" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewLoadData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewLoadData"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/buttonTestD4J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonTestD4J" />

        <TextView
            android:id="@+id/textViewTestD4J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTestD4J"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/buttonTestKeras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonTestKeras" />

        <TextView
            android:id="@+id/textViewTestKeras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTestKeras"
            android:gravity="center_horizontal"/>
    </TableLayout>



</android.support.constraint.ConstraintLayout>
